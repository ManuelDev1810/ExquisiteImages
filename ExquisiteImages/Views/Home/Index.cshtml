@model List<Image>

@{
    Layout = "_Layout";
    ViewBag.Title = "Index";
    ViewBag.HeaderTitle = "Images";
}



@if (Model.Count == 0)
{
    <p>There is not images to show</p>
}
else
{

    <div class="row">
        <div class="col">
            <div class="card-columns">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <img class="card-img-top img-fluid" src="@item.Path" />
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <p class="card-text">@item.Description</p>
                            <a asp-route-id="@item.ImageId" asp-action="Img" asp-controller="Image" class="btn btn-primary btn-block btn-lg">Ver Imagen</a>
                        </div>
                    </div>
                }                
            </div>
        </div>
    </div>
}





